         <children>
            <TableView fx:id="ticketsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="id" minWidth="0.0" prefWidth="40" text="id" />
                  <TableColumn fx:id="price" minWidth="0.0" prefWidth="70" text="Цена" />
                  <TableColumn fx:id="performanceName" minWidth="0.0" prefWidth="250" text="Представление" />
                  <TableColumn fx:id="sectorId" minWidth="0.0" prefWidth="80" text="Сектор" />
                  <TableColumn fx:id="place" minWidth="0.0" prefWidth="70" text="Место" />
                  <TableColumn fx:id="availability" minWidth="0.0" prefWidth="80" text="Свободно" />

               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
