<VBox fx:controller="controllers.Tickets" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="content-view" stylesheets="/styles/tables.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <children>
      <HBox>
         <children>
            <HBox styleClass="content-view-header" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="title" text="Билеты" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" styleClass="content-view-header">
               <children>
                  <Label styleClass="title" text="+" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox prefHeight="1.0" prefWidth="600.0" styleClass="search-bar">
         <children>
            <TextField fx:id="searchField" prefHeight="26.0" prefWidth="217.0" promptText="Залы" />
            <Button fx:id="editBtn" mnemonicParsing="false" text="Редактировать" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" text="Удалить" />
            <Button fx:id="createBtn" mnemonicParsing="false" text="Добавить" />
         </children>
      </HBox>
