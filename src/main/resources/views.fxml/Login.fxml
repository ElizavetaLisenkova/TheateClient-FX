<HBox alignment="CENTER" prefHeight="740.0" prefWidth="1280.0" styleClass="login-view" stylesheets="/styles/login.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.Login">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="login-view-main" stylesheets="@../styles/login.css">
         <children>
            <HBox styleClass="login-title" stylesheets="/styles/login.css">
               <children>
                  <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="102.0" prefWidth="418.0" styleClass="header" text="Sign in" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
               </children>
            </HBox>
            <VBox styleClass="login-body">
               <children>
                  <GridPane alignment="TOP_CENTER" centerShape="false" prefWidth="371.0" styleClass="grid-pane" vgap="18.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <TextField fx:id="loginTf" promptText="Login" styleClass="login-field">
