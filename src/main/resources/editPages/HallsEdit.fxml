<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="edit-view" stylesheets="@../styles/edit.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.editControllers.HallsEdit">
   <children>
      <HBox alignment="CENTER" styleClass="content-view-header">
         <children>
            <Label fx:id="title" styleClass="title1" text="Создать" />
         </children>
         <stylesheets>
            <URL value="@../styles/tables.css" />
            <URL value="@../styles/edit.css" />
         </stylesheets>
      </HBox>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_RIGHT" prefHeight="214.0" prefWidth="34.0" styleClass="label-box" />
            <VBox alignment="TOP_CENTER" prefWidth="300.0" styleClass="box-buttons">
               <children>
                  <TextField fx:id="idTf" promptText="id" />
                  <TextField fx:id="nameTf" promptText="Название" styleClass="text-field" />
                  <TextField fx:id="seatsNumberTf" promptText="Количество мест" />
                  <HBox prefHeight="59.0" prefWidth="300.0" styleClass="box-buttons">
                     <children>
                        <Button fx:id="createBtn" mnemonicParsing="false" onAction="#create" text="Создать">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                        <Button fx:id="closeBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#close" text="Закрыть">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" prefHeight="214.0" prefWidth="32.0" />
         </children>
      </HBox>
   </children>
</VBox>
